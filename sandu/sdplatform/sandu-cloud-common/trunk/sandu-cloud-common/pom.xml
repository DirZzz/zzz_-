		</dependency>

	</dependencies>


	<repositories>
		<repository>
			<id>SanduDev</id>
			<name>Sandu Public Repositories</name>
			<url>http://192.168.1.118:8081/nexus/content/groups/public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
